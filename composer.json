{
    "name": "mukadi/wp-sf-skeleton",
    "description": "A Composer builded stack for combining Wordpress and Symfony",
    "keywords": ["symfony", "wordpress", "boilerplate", "skeleton"],
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Olivier M. Mukadi",
            "email": "mbo2olivier@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "ext-iconv": "*",
        "mukadi/wordpress-bundle": "^1.0",
        "symfony/console": "^4.0",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/lts": "^4@dev",
        "symfony/yaml": "^4.0"
    },
    "require-dev": {
        "symfony/dotenv": "^4.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "replace": {
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "post-root-package-install": [
            "@php -r \"file_put_contents('public/index.php',file_get_content('sf-wp-bootstrap.php'));\"",
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false
        },
        "installer-paths": {
            "wp/mu-plugins/{$name}": ["type:wordpress-muplugin"],
            "wp/plugins/{$name}": ["type:wordpress-plugin"],
            "wp/themes/{$name}": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "public"
    }
}
